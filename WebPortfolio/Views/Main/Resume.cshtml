<style>
    body {
        background-color: black;
        padding: 0px;
        margin: 0px;
    }

    #resume-container {
        position: relative;
        font-family: 'Open Sans Condensed', sans-serif;
        background-color: whitesmoke;
        width: 1000px; /* fits PDF width: approximate, PDF will shrink width to fit */
        height: 1414px; /* fits PDF height: needs to be exact, may change based on margin */
        margin: 0 auto;
        box-sizing: border-box;
        font-size: 20px;
        color: rgb(60, 60, 60);
    }

        #resume-container #footer {
            width: 100%;
            position: absolute;
            text-align: center;
            bottom: 3px;
            left: 0px;
            font-size: 16px;
            letter-spacing: 0px;
        }

        #resume-container #header {
            position: relative;
            overflow: auto;
            padding: 10px 20px 10px 20px;
            box-sizing: border-box;
            background-color: rgb(65, 178, 205);
            color: white;
        }

        #resume-container a {
            color: inherit;
        }

            #resume-container #header .left-block {
                width: 50%;
                float: left;
            }

            #resume-container #header .right-block {
                width: 50%;
                float: right;
                text-align: right;
                padding-top: 10px;
            }

            #resume-container #header #name {
                font-size: 50px;
                font-weight: bolder;
                line-height: 90%;
            }

            #resume-container #header #position {
                padding-left: 2px;
            }

            #resume-container #header #email {
                text-decoration: underline;
            }

        #resume-container .section {
            margin: 8px 0px 8px 0px;
            padding: 0px 10px 0px 10px;
            box-sizing: border-box;
        }

        #resume-container #resume-container-content {
            padding: 15px 40px 15px 40px;
        }

    .section .section-title {
        border-bottom: 1px solid rgb(218, 218, 218);
        padding-bottom: 5px;
    }

    .section .section-title .section-icon {
        position: relative;
        display: inline-block;
        width: 23px;
        height: 23px;
        background-size: cover;
        /*opacity: 0.7;*/
        margin-right: 15px;
        top: 0px;
    }

    .section .section-title .title {
        display: inline-block;
        font-size: 30px;
        font-weight: 600;
        color: rgb(90, 90, 90);
    }

    .section-row {
        margin-bottom: 15px;
        margin-top: 15px;
    }

        .section-row .section-row-header {
            overflow: auto;
        }

    .section-row .section-row-title {
        float: left;
        font-weight: 600;
        font-size: 20px;
        color: rgb(90, 90, 90);
    }

        .section-row .section-row-subtitle {
            float: right;
            font-size: 20px;
        }

    .section-row .section-row-content {
        line-height: 120%;
        text-align: justify;
    }

        .section-icon.education {
            background-image: url("/Content/Resume/school.png");
        }

        .section-icon.experience {
            background-image: url("/Content/Resume/work.png");
        }

        .section-icon.other {
            background-image: url("/Content/Resume/other.png");
        }

        .section-icon.skill {
            background-image: url("/Content/Resume/skill.png");
        }

    .section .section-content {
        padding: 10px 20px 10px 20px;
    }

    .skill-row {
        overflow: auto;
    }

        .skill-row .skill-title {
            float: left;
            width: 400px;
        }

        .skill-row .skill-rating {
            position: relative;
            top: 12px;
            float: left;
            width: 300px;
            height: 6px;
            background-color: rgb(174, 225, 237);
        }

            .skill-row .skill-rating .skill-rating-percent {
                background-color: rgb(65, 178, 205);
                height: 100%;
            }

    .half {
        width: 50%;
    }

    .float-left {
        float: left;
    }

    .float-right {
        float: right;
    }

    .clearfix {
        clear: both;
    }

    .arrow {
        position: absolute;
        right: 270px;
        top: 43px;
        display: inline-block;
        width: 32px;
        height: 32px;
    }
